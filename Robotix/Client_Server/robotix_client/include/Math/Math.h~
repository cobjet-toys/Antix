#ifndef MATH_H_
#define MATH_H_

namespace Math
{
class Math
{
public:
    /**
     * Convert radions 'r' to degrees.
     */
    static float rtod( const float& r );

    /**
     * Convert degrees 'd' to radians.
     */
    static float dtor( const float& d);

    /**
     * Calcuate the distance assuming the world wraps. 
     */
    static float WrapDistance(const float& d, const float& maxSize);
    
    /**
     * Normalize the distance 'd' relative to the max world size.
     */
    static float DistanceNormalize(const float& d, const float& maxSize);
    
    /**
     * Normalize the angle 'a'.
     */
    static float AngleNormalize(const float& a);
};
}

#endif
